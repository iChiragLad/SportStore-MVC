@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg"})

@foreach (var link in @Model)
{
    @Html.RouteLink(link, new { controller = "Product", action = "List", category = link}, new { @class = ((link == (string)ViewBag.SelectedCategory) ? " btn btn-block btn-lg btn-primary" : "btn btn-block btn-lg") })
}
